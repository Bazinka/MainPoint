<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/firebase_auth_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/logo_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/logo_text_size_large" />

    <ImageView
        android:id="@+id/auth_logo_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/logo_textView"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp"
        android:src="@drawable/logo" />

    <Button
        android:id="@+id/auth_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/auth_logo_imageView"
        android:layout_alignLeft="@id/auth_logo_imageView"
        android:layout_alignRight="@id/auth_logo_imageView"
        android:layout_alignStart="@id/auth_logo_imageView"
        android:layout_below="@id/logo_textView"
        android:background="@color/colorAccent"
        android:paddingTop="10dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="@dimen/logo_text_size_large" />
</RelativeLayout>
